<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ChessReport" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20" uuid="12345678-1234-5678-1234-567812345678">

    <queryString>
        <![CDATA[SELECT p.id AS partida_id, u1.usuario AS jugador_blancas, u2.usuario AS jugador_negras, m.movimiento
                 FROM partidas p
                 JOIN usuarios u1 ON p.jugador_blancas_id = u1.id
                 JOIN usuarios u2 ON p.jugador_negras_id = u2.id
                 JOIN movimientos m ON p.id = m.partida_id
                 WHERE p.id = $P{PARTIDA_ID}
                 ORDER BY m.timestamp]]>
    </queryString>

    <parameter name="PARTIDA_ID" class="java.lang.Integer"/>

    <field name="partida_id" class="java.lang.Integer"/>
    <field name="jugador_blancas" class="java.lang.String"/>
    <field name="jugador_negras" class="java.lang.String"/>
    <field name="movimiento" class="java.lang.String"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement>
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Informe de Partida de Ajedrez]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[ID Partida]]></text>
            </staticText>
            <staticText>
                <reportElement x="110" y="0" width="150" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Jugador Blancas]]></text>
            </staticText>
            <staticText>
                <reportElement x="270" y="0" width="150" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Jugador Negras]]></text>
            </staticText>
            <staticText>
                <reportElement x="430" y="0" width="125" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Movimiento]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{partida_id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="110" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{jugador_blancas}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="270" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{jugador_negras}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="430" y="0" width="125" height="20"/>
                <textFieldExpression><![CDATA[$F{movimiento}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
